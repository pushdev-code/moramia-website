<section class="card-wrapper">
    <div class="card">
        <div class="product-head">
            <div class="line"></div>
            <p class="product-price"><%= product.product_price %></p>
            <a href="#">
                <h6 class="product-title"><%= product.product_name %></h6>
            </a>
            <div class="ratings-review">
                <div class="ratings">
                    <i class="star"></i>
                    <i class="star"></i>
                    <i class="star"></i>        
                    <i class="star"></i>
                    <i class="star"></i>
                </div>
                <div class="review"></div>
                <a href="#">Write A Review</a>      
            </div>
        </div>
        <p class="in-stock">In stock</p>
    </div>
    <div class="description-wrapper">
        <p class="description"><%= product.product_description %></p>
    </div>
    <form class="add-cart">
        <div class="add-btn">
            <p>Qty</p>
            <div class="quantity">
                <span class="qty-less">
                    <i class="arrow-less"></i>
                </span>
                <input type="number" class="qty-number" id="qty" step="1" min="1" max="300" name="quantity" value="1">
                <span class="qty-more">
                    <i class="arrow-plus"> 
                    </i>
                </span>
            </div>    
        </div>
        <button type="submit" name="addtocart" value="5" class="button">Add to cart</button>
    </form>
</section>